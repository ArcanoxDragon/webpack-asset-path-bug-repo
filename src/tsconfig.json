{
	"compileOnSave": false,
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"useDefineForClassFields": true,
		"noImplicitThis": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es6",
			"es7",
			"esnext"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"jsx": "react",
		"baseUrl": "."
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"*/node_modules/**/*",
		"../node_modules/**/*"
	]
}
